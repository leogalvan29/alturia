---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro'; 
import Seccion1 from '../components/Seccion1.astro';
import Modelos from '../components/Modelos.astro';
import Amenidades from '../components/Amenidades.astro';
import Galeria from '../components/Galeria.astro';


const data = await fetch ('https://www.desarrollostiva.com/wp-json/wp/v2/alturia?acf_format=standard')
const datos = await data.json() 

const datosLanding = datos[0].acf
const imagenGaleria = datos[0].acf.galeria
console.log(datosLanding)   
---
  
<Layout title="Welcome to Astro.">  
	<Seccion1 
	 datosLanding={datosLanding}
	/> 
	<Modelos 
	datosLanding={datosLanding}
	/> 
	
	<Galeria 
	   imagenGaleria={imagenGaleria}
	/>
	<Amenidades 
	 datosLanding={datosLanding}
	/>
	<a href="https://api.whatsapp.com/send?phone=526672320689&text=Hola%20necesito%20informacion" class="whatsapp"><img src={datosLanding.whatsapp.url} alt="whatsapp"> </a>
</Layout>

<style>
	main {
		margin: auto; 
		padding: 1rem;
		width: 800px; 
		max-width: calc(100% - 2rem); 
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.whatsapp{
		position: fixed; 
		right: 3%;
		bottom: 50%;
	}
	 .whatsapp img{
		width: 64px;
		height: 64px;
	 }
</style>

<script>
	  if ("loading" in HTMLImageElement.prototype) {
    console.log("El navegador soporta `lazy-loading`...");
  } else {
    console.log("`lazy-loading` no soportado...");
  }
</script>
